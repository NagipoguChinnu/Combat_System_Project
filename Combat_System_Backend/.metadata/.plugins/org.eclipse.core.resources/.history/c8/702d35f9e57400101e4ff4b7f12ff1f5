package com.combatsystem.www.repository;

import java.time.LocalDateTime;
import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Modifying;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;
import org.springframework.stereotype.Repository;

import com.combatsystem.www.model.AdminEncryptedMessage;

import jakarta.transaction.Transactional;

@Repository
public interface AdminEncryptedMessageRepo extends JpaRepository<AdminEncryptedMessage, Long>{

	List<AdminEncryptedMessage> findByReceiverEmail(String email);
	
	@Modifying
    @Transactional
    @Query("UPDATE AdminEncryptedMessage m SET m.status = :status WHERE m.timeStamp = :timestamp")
    int updateStatusByTimestamp(@Param("status") String status, @Param("timestamp") LocalDateTime timestamp);
}
